{
  "compilerOptions": {
    "outDir": "/dist",
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "const": ["const/index.ts"],
      "data": ["data/index.ts"],
      "handlers": ["handlers/index.ts"],
      "player-state": ["player-state/index.ts"],
      "server": ["server/index.ts"],
      "types": ["types/index.ts"],
      "utils": ["utils/index.ts"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
